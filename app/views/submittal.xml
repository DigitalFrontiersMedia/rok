<Alloy autoStyle="true">
    <Window class="container" left="0.00%" top="0.00%">
        <Require id="backCorner" src="backCorner" type="view"/>
        <Require id="homeCorner" src="homeCorner" type="view"/>
        <Require id="configCorner" src="configCorner" type="view"/>
        <Label id="Label_Title"/>
        <Label id="Label_subTitle"/>
        <View id="l__submittalInfo">
            <View id="View_column">
                <View id="View_information">
                    <Label id="Label_iTitle"/>
                    <TableView id="TableView_information">
                        <TableViewSection id="listSection">
                            <TableViewRow class="inputLine" id="View_line1">
                                <View id="View_formElement1">
                                    <Label class="formElement fieldLabel" id="Label_submittalNum"/>
                                    <Label class="formElement fieldValue fontSize20" id="Label_submittalNumValue"/>
                                </View>
                                <View id="View_formElement2">
                                    <Label class="formElement fieldLabel" id="Label_spec"/>
                                    <Label class="formElement fieldValue fontSize20" id="Label_specValue"/>
                                    <Label class="formElement fieldValue fontSize14" id="Label_specNameValue"/>
                                </View>
                                <View id="View_formElement3">
                                    <Label class="formElement fieldLabel" id="Label_version"/>
                                    <Label class="formElement fieldValue fontSize20" id="Label_versionValue"/>
                                </View>
                                <View id="View_formElement4">
                                    <Label class="formElement fieldLabel" id="Label_due"/>
                                    <Label class="formElement fieldValue fontSize20" id="Label_dueValue"/>
                                </View>
                            </TableViewRow>
                            <TableViewRow class="inputLine" id="View_line2">
                                <View id="View_formElement5">
                                    <Label class="formElement fieldLabel nudgeTop" id="Label_status"/>
                                    <Label class="formElement fieldValue nudgeTop" id="Label_statusValue"/>
                                </View>
                            </TableViewRow>
                            <TableViewRow class="inputLine" id="View_line3">
                                <View id="View_formElement6">
                                    <Label class="formElement fieldLabel nudgeTop" id="Label_submitter"/>
                                    <Label class="formElement fieldValue nudgeTop" id="Label_submitterValue"/>
                                </View>
                                <View class="verticalSeparator" />
                                <View id="View_formElement7">
                                    <Label class="formElement fieldLabel nudgeTop" id="Label_manager"/>
                                    <Label class="formElement fieldValue nudgeTop" id="Label_managerValue"/>
                                </View>
                                <View class="verticalSeparator" />
                                <View id="View_formElement8">
                                    <Label class="formElement fieldLabel nudgeTop" id="Label_reviewer"/>
                                    <Label class="formElement fieldValue nudgeTop" id="Label_reviewerValue"/>
                                </View>
                            </TableViewRow>
                            <TableViewRow class="inputLine" id="View_line4">
                                <View id="View_formElement9">
                                    <Label class="formElement fieldLabel nudgeTop" id="Label_watching"/>
                                    <Label class="formElement fieldValue nudgeTop" id="Label_watchingValue"/>
                                </View>
                            </TableViewRow>
                        </TableViewSection>
                    </TableView>
                </View>
	            <View id="View_files">
	                <Label id="Label_files"/>
	                <ScrollView>
	                    <TableView id="ListView_files" onClick="chooseRef">
	                        <TableViewSection id="listSection"/>
	                    </TableView>
	                </ScrollView>
	            </View>
            </View>
	        <View id="View_history">
	            <Label id="Label_history"/>
	            <ScrollView id="ScrollView_history">
            		<TableView id="ListView_history">
                        <TableViewSection id="listSection"/>
                    </TableView>
				</ScrollView>
	        </View>
        </View>
    </Window>
</Alloy>
