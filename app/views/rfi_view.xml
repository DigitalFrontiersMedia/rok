<Alloy autoStyle="true">
    <Window class="container" left="0.00%" top="0.00%">
        <Require id="backCorner" src="backCorner" type="view"/>
        <Require id="homeCorner" src="homeCorner" type="view"/>
        <Require id="configCorner" src="configCorner" type="view"/>
        <Require id="optionCorner" src="optionCorner" type="view"/>
        <ImageView id="imgBtn_edit"/>
        <Label id="Label_Title"/>
        <Label id="Label_subTitle"/>
        <View id="View_rfiForm">
            <View class="inputLine" id="View_titleLine">
                <Label class="rfiFormElement rfiFormLabel" id="Label_TextField_title"/>
                <ScrollView id="TextField_titleWrapper" class="textWrapper">
                    <TextField class="rfiFormElement" id="TextField_title"/>
                </ScrollView>
            </View>
            <View class="inputLine" id="View_questionLine">
                <Label class="rfiFormElement rfiFormLabel" id="Label_TextArea_question"/>
                <ScrollView id="TextArea_questionWrapper" class="areaWrapper">
                    <TextArea class="rfiFormElement" id="TextArea_question"/>
                </ScrollView>
            </View>
            <View class="inputLine" id="View_answerLine">
                <Label class="rfiFormElement rfiFormLabel" id="Label_answer"/>
                <ScrollView class="areaWrapper">
                    <TextArea class="rfiFormElement" id="TextArea_answer"/>
                </ScrollView>
            </View>
            <View class="inputLine" id="View_referencesLine">
                <Label class="rfiFormElement rfiFormLabel" id="Label_references"/>
                <ScrollView class="areaWrapper" id="referencesParent">
                    <TableView id="ListView_refs" onClick="chooseRef">
                        <TableViewSection id="listSection"/>
                    </TableView>
                </ScrollView>
            </View>
        </View>
        <View id="View_rfiMetaForm">
            <View class="inputLine" id="View_sendDateLine">
                <Label class="rfiFormElement rfiFormLabel" id="Label_sendDate"/>
                <View class="textWrapper">
                    <TextField class="rfiFormElement" id="TextField_sendDate"/>
                </View>
            </View>
            <View class="inputLine" id="View_dueDateLine">
                <Label class="rfiFormElement rfiFormLabel" id="Label_TextField_due_at"/>
                <ScrollView id="TextField_due_atWrapper" class="textWrapper">
                    <TextField class="rfiFormElement" id="TextField_due_at"/>
                </ScrollView>
            </View>
            <View class="inputLine" id="View_assignedLine">
                <Label class="rfiFormElement rfiFormLabel" id="Label_assigned"/>
                <ScrollView class="areaWrapper">
                    <TextArea class="rfiFormElement" id="TextField_assigned"/>
                </ScrollView>
            </View>
            <View class="inputLine" id="View_historyLine">
                <Label class="rfiFormElement rfiFormLabel" id="Label_history"/>
                <ScrollView class="areaWrapper" id="historyParent">
                    <TableView id="ListView_historyEvents">
                        <TableViewSection id="listSection"/>
                    </TableView>
                </ScrollView>
            </View>
        </View>
    </Window>
</Alloy>
