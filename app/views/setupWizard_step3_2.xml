<Alloy autoStyle="true">
    <Window class="container">
        <Require id="backCorner" src="backCorner" type="view"/>
        <Require id="homeCorner" src="homeCorner" type="view" if="Alloy.Globals.configured"/>
        <Require id="configCorner" src="configCorner" type="view"/>
        <Label id="Label_wizardTitle"/>
        <Label id="Label_wizardStep"/>
        <Label id="Label_configSelect"/>
        <Label id="Label_message"/>
        <TableView id="ListView_apps" onClick="chooseApp">
            <TableViewSection id="listSection">
                <TableViewRow if="Alloy.Globals.usingWebUi">
                    <Label class="choice">Autodesk Build</Label>
                </TableViewRow>
                <TableViewRow>
                    <Label class="choice">PlanGrid</Label>
                </TableViewRow>
                <TableViewRow if="Alloy.Globals.nativeUi">
                    <Label class="choice">Procore</Label>
                </TableViewRow>
                <TableViewRow if="Alloy.Globals.usingWebUi">
                    <Label class="choice">Procore</Label>
                </TableViewRow>
            </TableViewSection>
        </TableView>
        <View class="button-wrapper" id="nxtBtn" onClick="wizardContinue">
            <ImageView class="btnMainSecondary"/>
            <Label class="btnText skip"/>
        </View>
    </Window>
</Alloy>
