<Alloy>
    <Window class="container" id="whiteboard" left="0.00%" top="0.00%">
        <View id="canvas"/>
        <View id="controls">
        	<View class="dwgControl tool">
            	<ImageView id="imgBtn_draw"/>
            </View>
        	<View class="dwgControl tool">
            	<ImageView id="imgBtn_erase"/>
            </View>
        	<View class="dwgControl tool">
            	<ImageView id="imgBtn_clear"/>
            </View>
            <!--ImageView class="dwgControl" id="imgBtn_shapeSquare"/-->
            <ImageView class="dwgControl" id="imgBtn_shapeCircle" visible="false" />
            <Label id="Label_color"/>
            <ImageView class="dwgControl" id="imgBtn_red"/>
            <ImageView class="dwgControl" id="imgBtn_orange"/>
            <ImageView class="dwgControl" id="imgBtn_yellow"/>
            <ImageView class="dwgControl" id="imgBtn_green"/>
            <ImageView class="dwgControl" id="imgBtn_blue"/>
            <ImageView class="dwgControl" id="imgBtn_black"/>
        </View>
        <Require id="backCorner" src="backCorner" type="view"/>
        <Require id="homeCorner" src="homeCorner" type="view"/>
        <Require id="configCorner" src="configCorner" type="view"/>
    </Window>
</Alloy>
