<Alloy>
    <Window class="container" left="0.00%" top="0.00%">
        <Require id="backCorner" src="backCorner" type="view"/>
        <Require id="homeCorner" src="homeCorner" type="view" if="Alloy.Globals.configured"/>
        <Require id="configCorner" src="configCorner" type="view"/>
        <Label id="Label_wizardTitle"/>
        <Label id="Label_wizardStep"/>
        <Label id="Label_configSelect"/>
        <View id="View_loginForm">
            <View class="inputLine" id="View_userLine">
                <View class="inputWrapper">
                    <Label id="Label_user"/>
                    <TextField id="TextField_user"/>
                </View>
            </View>
            <View class="inputLine" id="View_passLine">
                <View class="inputWrapper">
                    <Label id="Label_pass"/>
                    <TextField id="TextField_pass"/>
                </View>
            </View>
            <View class="button-wrapper" id="imgBtn_login" onClick="login">
                <ImageView class="btnMainSecondary"/>
                <Label class="btnText cont"/>
            </View>
        </View>
        <Label class="fontSize24" id="alreadyLoggedIn"/>
        <View class="button-wrapper" id="nxtBtn" onClick="wizardContinue">
            <ImageView class="btnMainSecondary"/>
            <Label class="btnText skip"/>
        </View>
    </Window>
</Alloy>
