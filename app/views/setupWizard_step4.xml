<Alloy>
    <Window class="container" left="0.00%" top="0.00%">
        <Require id="backCorner" src="backCorner" type="view"/>
        <Require id="homeCorner" src="homeCorner" type="view"/>
        <Require id="configCorner" src="configCorner" type="view"/>
        <Label id="Label_wizardTitle"/>
        <Label id="Label_wizardStep"/>
        <Label id="Label_configSelect"/>
        <Label id="Label_message"/>
        <View id="View_settingsForm">
            <View id="form-top">
                <View id="left-label-wrapper">
                    <View class="inputLine">
                        <Label class="right fontSize24" id="Label_deviceName"/>
                    </View>
                    <View class="inputLine">
                        <Label class="right fontSize24" id="Label_app"/>
                    </View>
                    <View class="inputLine">
                        <Label class="right fontSize24" id="Label_project"/>
                    </View>
                    <View class="inputLine">
                        <Label class="right fontSize24" id="Label_superName"/>
                    </View>
                    <View class="inputLine">
                        <Label class="right fontSize24" id="Label_superPhone"/>
                    </View>
                    <View class="inputLine">
                        <Label class="right fontSize24" id="Label_superSMSMessage"/>
                    </View>
                    <View class="inputLine">
                        <Label class="right fontSize24" id="Label_siteInfo"/>
                    </View>
                    <View class="inputLine">
                        <Label class="right fontSize24" id="Label_adminSecret"/>
                    </View>
                </View>
                <View id="right-values-wrapper">
                    <View class="inputLine">
                        <TextField class="left fontSize24" id="deviceNameValue"/>
                    </View>
                    <View class="inputLine">
                        <TextField class="left fontSize24" id="appValue"/>
                    </View>
                    <View class="inputLine">
                        <TextField class="left fontSize24" id="projectValue"/>
                    </View>
                    <View class="inputLine">
                        <TextField class="left fontSize24" id="superNameValue"/>
                    </View>
                    <View class="inputLine">
                        <TextField class="left fontSize24" id="superPhoneValue"/>
                    </View>
                    <View class="inputLine">
                        <Button id="btnSuperSMSMessage"/>
                    </View>
                    <View class="inputLine">
                        <Button id="btnSiteInfo"/>
                    </View>
                    <View class="inputLine">
                        <TextField class="left fontSize24" id="adminSecretValue"/>
                    </View>
                </View>
            </View>
        </View>
        <View class="button-wrapper" id="nxtBtn" onClick="wizardContinue">
            <ImageView class="btnMainSecondary"/>
            <Label class="btnText finish"/>
        </View>
    </Window>
</Alloy>
