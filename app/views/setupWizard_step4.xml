<Alloy>
    <Window class="container" left="0.00%" top="0.00%">
        <Require id="backCorner" src="backCorner" type="view"/>
        <Require id="homeCorner" src="homeCorner" type="view"/>
        <Require id="configCorner" src="configCorner" type="view"/>
        <Label id="Label_wizardTitle"/>
        <Label id="Label_wizardStep"/>
        <Label id="Label_configSelect"/>
        <Label id="Label_message"/>
        <View id="View_settingsForm">
            <View id="form-top">
                <View id="left-label-wrapper">
                    <View class="inputLine" id="View_userLine">
                        <Label class="right fontSize24" id="Label_user"/>
                    </View>
                    <View class="inputLine" id="View_networkLine">
                        <Label class="right fontSize24" id="Label_network"/>
                    </View>
                    <View class="inputLine" id="View_appLine">
                        <Label class="right fontSize24" id="Label_app"/>
                    </View>
                    <View class="inputLine" id="View_superNameLine">
                        <Label class="right fontSize24" id="Label_superName"/>
                    </View>
                    <View class="inputLine" id="View_superPhoneLine">
                        <Label class="right fontSize24" id="Label_superPhone"/>
                    </View>
                </View>
                <View id="right-values-wrapper">
                    <View class="inputLine" id="View_userLine">
                        <TextField class="left fontSize24" id="Label_accountValue"/>
                    </View>
                    <View class="inputLine" id="View_networkLine">
                        <TextField class="left fontSize24" id="Label_networkValue"/>
                    </View>
                    <View class="inputLine" id="View_appLine">
                        <TextField class="left fontSize24" id="Label_appValue"/>
                    </View>
                    <View class="inputLine" id="View_superNameLine">
                        <TextField class="left fontSize24" id="Label_superNameValue"/>
                    </View>
                    <View class="inputLine" id="View_superPhoneLine">
                        <TextField class="left fontSize24" id="Label_superPhoneValue"/>
                    </View>
                </View>
            </View>
        </View>
        <View class="button-wrapper" id="nxtBtn" onClick="wizardContinue">
            <ImageView class="btnMainSecondary"/>
            <Label class="btnText finish"/>
        </View>
    </Window>
</Alloy>
