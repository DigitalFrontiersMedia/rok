<Alloy>
    <Window class="container">
        <Require id="homeCorner" src="homeCorner" type="view"/>
        <Require id="configCorner" src="configCorner" type="view"/>
        <View id="View_drawings">
            <Label id="Label_drawings"/>
            <ImageView id="imgBtn_drawings"/>
        </View>
        <View id="View_rfis">
            <Label id="Label_rfis"/>
            <ImageView id="imgBtn_rfis"/>
        </View>
        <View id="View_submittals">
            <Label id="Label_submittals"/>
            <ImageView id="imgBtn_submittals"/>
        </View>
        <View id="View_secondaryButtons">
            <View class="btnRow" id="View_row1">
		        <View class="button-wrapper largeBtn" id="imgBtn_whiteboard" onClick="goWhiteboard">
		            <ImageView class="btnMainSecondary largeBtn"/>
		            <Label class="btnText whiteboard"/>
		        </View>
		        <View class="button-wrapper largeBtn" id="imgBtn_pageSuper" onClick="sendSMS">
		            <ImageView class="btnMainSecondary largeBtn"/>
		            <Label class="btnText pageSuper"/>
		        </View>
		        <View class="button-wrapper largeBtn" id="imgBtn_info" onClick="siteInfoMenu">
		            <ImageView class="btnMainSecondary largeBtn"/>
		            <Label class="btnText siteInfo"/>
		        </View>
            </View>
            <View class="btnRow" id="View_row2">
		        <View class="button-wrapper largeBtn" id="imgBtn_documents">
		            <ImageView class="btnMainSecondary largeBtn rotate180"/>
		            <Label class="btnText documents"/>
		        </View>
            </View>
        </View>
    </Window>
</Alloy>
