<Alloy>
    <Window class="container">
        <Require id="homeCorner" src="homeCorner" type="view"/>
        <Require id="configCorner" src="configCorner" type="view"/>
        <View id="mainButtons">
	        <View id="View_submittals" if="Alloy.Globals.useROKbtns">
	            <ImageView class="imgBtn_submittals" id="imgBtn_submittals_hotspot" onClick="goSubmittals"/>
	            <Label class="fontSize20" id="Label_submittals"/>
	        </View>
	        <View id="View_drawings">
	            <ImageView class="imgBtn_drawings" id="imgBtn_drawings_hotspot" onClick="goDrawings"/>
	            <Label class="fontSize20" id="Label_drawings"/>
	        </View>
	        <View id="View_documents" if="Alloy.Globals.useROKbtns">
	            <ImageView class="imgBtn_documents" id="imgBtn_documents_hotspot" onClick="goDocuments"/>
	            <Label class="fontSize20" id="Label_documents"/>
	        </View>
	        <View id="View_rfis" if="Alloy.Globals.useROKbtns">
	            <ImageView id="imgBtn_rfis" onClick="goRfiChoice"/>
	            <Label class="fontSize20" id="Label_rfis"/>
	        </View>
        </View>
        <View id="View_secondaryButtons">
            <View class="btnRow" id="View_row1">
                <View class="button-wrapper-tall largeBtnTall" id="imgBtn_whiteboard" onClick="goWhiteboard">
                    <ImageView class="btnMainSecondaryEndCapTall largeBtnTall fullWidth"/>
                    <View class="layoutHorizontal widthToSize padTopBottomQtr">
                      <ImageView class="whiteboardImg"/>
                      <Label class="btnText whiteboard"/>
                    </View>
                </View>
                <View class="button-wrapper-tall largeBtnTall" id="imgBtn_pageSuper" onClick="pageSuperMenu">
                    <ImageView class="btnMainSecondaryTall largeBtnTall fullWidth"/>
                    <View class="layoutHorizontal widthToSize padTopBottomQtr">
                      <ImageView class="pageSuperImg"/>
                      <Label class="btnText pageSuper"/>
                    </View>
                </View>
                <View class="button-wrapper-tall largeBtnTall" id="imgBtn_info" onClick="siteInfoMenu">
                    <ImageView class="btnMainSecondaryEndCapTall largeBtnTall fullWidth mirror"/>
                      <View class="layoutHorizontal widthToSize padTopBottomQtr">
                        <ImageView class="siteInfoImg"/>
                        <Label class="btnText siteInfo"/>
                      </View>
                </View>
            </View>
            <View class="btnRow" id="View_row2">
            </View>
        </View>
    </Window>
</Alloy>
