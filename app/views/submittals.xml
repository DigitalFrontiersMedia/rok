<Alloy autoStyle="true">
    <Window class="container" left="0.00%" top="0.00%">
        <Require id="backCorner" src="backCorner" type="view"/>
        <Require id="homeCorner" src="homeCorner" type="view"/>
        <Require id="configCorner" src="configCorner" type="view"/>
        <Require id="optionCorner" src="optionCorner" type="view"/>
        <Label id="Label_Title"/>
        <Label id="Label_subTitle"/>
        <View id="tableWrapper">
        	<View id="headerRow">
        		<Label id="submittalNum" class="colS"></Label>
        		<Label id="spec" class="colL"></Label>
        		<Label id="name" class="colL"></Label>
        		<Label id="ballInCourt" class="colL"></Label>
        		<Label id="lastActivity" class="colS"></Label>
        		<Label id="due" class="colS"></Label>
        		<Label id="status" class="colM"></Label>
        	</View>
	        <TableView id="TableView_submittals" onClick="chooseSubmittal">
	            <TableViewSection id="listSection">
	                <TableViewRow height=Ti.UI.FILL>
	                    <Label id="loadingText" bottom="0" class="centered details" top="0">Retrieving...</Label>
	                </TableViewRow>
	            </TableViewSection>
	        </TableView>
        </View>
    </Window>
</Alloy>
