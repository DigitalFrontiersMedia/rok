<Alloy autoStyle="true">
    <Window class="container">
        <Require id="backCorner" src="backCorner" type="view"/>
        <Require id="homeCorner" src="homeCorner" type="view"/>
        <Label id="Label_Title"/>
        <Label id="Label_subTitle"/>
        <View id="appDetails">
	        <Label id="appVersion" />
	        <Label id="deviceId" />
        </View>
        <View id="View_secondaryButtons">
            <View class="btnRow" id="View_row1">
                <View class="button-wrapper largeBtn" id="imgBtn_reconfigure" onClick="goReconfigure">
                    <ImageView class="btnMainSecondary largeBtn"/>
                    <Label class="btnText reconfigure"/>
                </View>
                <View class="button-wrapper largeBtn" id="imgBtn_purge" onClick="purgeCachedAssets">
                    <ImageView class="btnMainSecondary largeBtn"/>
                    <Label class="btnText purge"/>
                </View>
                <View class="button-wrapper largeBtn" id="imgBtn_browser" onClick="goBrowser">
                    <ImageView class="btnMainSecondary largeBtn"/>
                    <Label class="btnText browser"/>
                </View>
            </View>
        </View>
    </Window>
</Alloy>
