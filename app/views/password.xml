<Alloy>
    <View class="container">
        <View class="wrapper">
            <Label id="Label_pass"/>
            <Label id="Label_pass_prompt"/>
            <View class="textfield-wrapper">
                <TextField id="TextField_pass" onReturn="connect"/>
            </View>
            <View class="inputLine" id="View_passLine">
                <View class="button-wrapper" id="imgBtn_connect" onClick="connect">
                    <ImageView class="btnMainSecondary"/>
                    <Label class="btnText connect"/>
                </View>
                <View class="button-wrapper" id="imgBtn_cancel" onClick="cancel">
                    <ImageView class="btnMainSecondary"/>
                    <Label class="btnText cancel"/>
                </View>
            </View>
        </View>
    </View>
</Alloy>
